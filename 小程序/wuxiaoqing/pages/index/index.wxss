.card {
  display: flex;
  flex-direction: column;
  margin: 0;
  padding: 0;
  background: #fafafa;
}

#wxqSwiper image {
  width: 100%;
  height: 400rpx;
}

.information {
  width: 85%;
  box-shadow: 0 0 30rpx 0 rgba(0, 0, 0, 0.5);
  border-radius: 20rpx;
  background: white;
  padding: 20rpx;
  font-size: 30rpx;
  margin: -50rpx auto 0;
  z-index: 1;
}

.information>text {
  font-size: 40rpx;
  font-weight: bold;
}

.information>view {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.information>view>view {
  width: 84%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.information button {
  width: 120rpx;
  height: 70rpx;
  font-size: 30rpx;
  padding: 0;
  margin: 0;
  min-height: 0;
  line-height: 60rpx;
  border: 2rpx solid #ccc;
}

.information>view:nth-of-type(1) {
  padding: 10rpx 0 20rpx 0;
}

.information>view:nth-of-type(2) {
  padding: 0 0 20rpx 0;
}

.behavior {
  display: flex;
  justify-content: space-around;
  width: 100%;
  padding: 40rpx 0 20rpx 0;
  font-size: 30rpx;
}

.behavior view {
  width: 33.3%;
  text-align: center;
}

.behavior view image {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 10rpx;
}

.behavior view text {
  display: block;
  font-weight: normal;
}

.behavior view button {
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;
  font-size: 30rpx;
  background-color: #fafafa;
  color: black;
}

.behavior view .button-hover {
  background-color: #fafafa;
  color: black;
}

.wxqLogo {
  width: 100%;
  background: #f7f7f7;
  text-align: center;
}

.wxqLogo image {
  width: 400rpx;
  height: 400rpx;
}




