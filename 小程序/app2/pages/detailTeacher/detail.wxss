/* pages/detail/detail.wxss */

.detail {
  display: flex;
  flex-direction: column;
  background: #eee;
  font-size: 26rpx;
}

#wxqSwiper {
  height: 700rpx;
}

#wxqSwiper image {
  width: 100%;
  height: 100%;
}

.produce {
  padding: 20rpx;
  background: white;
  margin-bottom: 30rpx;
}

.produce>view {
  padding-top: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.produceTop>text:nth-of-type(1) {
  color: red;
  font-size: 34rpx;
  margin-right: 20rpx;
}

.produceTop>text:last-of-type {
  color: #ccc;
  margin-right: 20rpx;
}

.produceBot button {
  margin: 0;
  padding: 0;
  width: 60rpx;
  height: 60rpx;
  margin-left: 10rpx;
  min-height: 0;
  background: white;
  display: inline-block;
}

.produceBot .button-hover {
  background: white;
}

.produceBot button image {
  width: 100%;
  height: 100%;
}
.chooseSize {
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  background: white;
  margin-bottom: 20rpx;
}
.chooseSize image {
  width: 26rpx;
  height: 26rpx;
}

.footer {
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  display: flex;
  box-shadow: 0 0 30rpx 0 rgba(0, 0, 0, 0.5);
}

.footer>view {
  width: 33.3%;
}

.fo1 {
  display: flex;
  font-size: 20rpx;
  background: white;
}

.fo1>view {
  width: 50%;
  height: 100%;
  text-align: center;
}

.fo1>view>text {
  display: block;
}

.fo1>view:nth-of-type(1)>text {
  color: greenyellow;
}

.fo1>view:nth-of-type(2)>text {
  color: #ccc;
}

.fo1>view:nth-of-type(2) {
  position: relative;
}

.fo1>view:nth-of-type(2)>text:last-of-type {
  color: red;
  position: absolute;
  top: 6rpx;
  right: 20rpx;
}

.fo1 image {
  width: 40rpx;
  height: 40rpx;
  margin-top: 20rpx;
}

.footer button {
  margin: 0;
  padding: 0;
  min-height: 0;
  width: 100%;
  height: 100%;
  border-radius: 0;
  color: white;
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.fo2 button {
  background: pink;
}

.fo3 button {
  background: orangered;
}

.goodsAttr {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  font-size: 24rpx;
  z-index: 1000;
  display: none;
}

.goodsAttrTop {
  padding: 0 30rpx;
  background: #eee;
}

.goodsAttrBot {
  width: 100%;
  height: 80rpx;
}

.goodsAttr button {
  margin: 0;
  padding: 0;
  min-height: 0;
  width: 100%;
  height: 100%;
  border-radius: 0;
  color: white;
  display: flex;
  align-items: center;
  justify-content: space-around;
  background: orangered;
  font-size: 24rpx;
}

.detail .goodsAttrActive {
  display: block;
}

.goodsContent {
  padding: 40rpx 0;
  display: flex;
  border-bottom: 2rpx solid #eee;
  position: relative;
}

.close {
  position: absolute;
  top: 20rpx;
  right: 0rpx;
  width: 40rpx;
  height: 40rpx;
}

.goodsTop>image {
  width: 140rpx;
  height: 140rpx;
}

.goodsBot {
  width: 68%;
  padding-left: 20rpx;
}

.goodsBot>text {
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.goodsBot>text:nth-of-type(1) {
  font-weight: bold;
  padding-bottom: 20rpx;
}

.goodsBot>text:nth-of-type(2) {
  font-weight: bold;
  color: red;
}

.buyNum {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0 40rpx 0;
}

.buyNum>view {
  font-size: 24rpx;
  display: flex;
}

.buyNum>view>input {
  width: 60rpx;
  text-align: center;
  height: 40rpx;
  min-height: 0;
  border-top: 2rpx solid #ccc;
  border-bottom: 2rpx solid #ccc;
}

.buyNum>view>text {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #ccc;
  text-align: center;
  line-height: 40rpx;
}

.tankuang2 {
  height: 100%;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 999999;
  position: absolute;
  right: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.tankuang2 .container1 {
  padding: 40rpx 0;
  height: 80%;
  width: 80%;
  background: blanchedalmond;
  border-radius: 20rpx;
}

.cancel {
  position: fixed;
  top: 0;
  right: 0;
}

/* 规格 */

.size {
  border-top: 2rpx solid;
  border-bottom: 2rpx solid;
  width: 100%;
}

.size>view {
  padding: 20rpx 0;
}

.sizeChild {
  display: flex;
  flex-wrap: wrap;
  padding-top: 20rpx;
}

.sizeChild text {
  display: inline-block;
  padding: 10rpx;
  border: 2rpx solid;
  margin-right: 10rpx;
}
.sizeChild .sizeActive {
  border: 2rpx solid red;
  color: red;
}
