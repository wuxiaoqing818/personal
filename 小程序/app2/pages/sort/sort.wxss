/* pages/sort/sort.wxss */

.sort {
  width: 100%;
  display: flex;
  flex-direction: column;
  font-size: 26rpx;
}

.search {
  padding: 20rpx 30rpx 0;
}

.search input {
  position: relative;
  width: 93%;
  height: 70rpx;
  padding: 0 0 0 40rpx;
  border-radius: 40rpx;
  background: white;
  color: #ccc;
  border: 1px solid;
}

.search image {
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  right: 40rpx;
  top: 10rpx;
}

.main {
  width: 100%;
  height: 1000rpx;
  padding-top: 30rpx;
  display: flex;
  justify-content: space-between;
}

.nav {
  width: 20%;
  height: 100%;
  overflow-y: scroll;
  white-space: nowrap;
  background: white;
  
}

.nav>text {
  width: 100%;
  display: block;
  height: 110rpx;
  line-height: 120rpx;
  text-align: center;
  box-sizing: border-box;
}

.nav>.textActive {
  border-left: 4rpx solid red;
}

.goods {
  width: 80%;
  height: 100%;
  overflow-y: scroll;
  white-space: nowrap;
}

.goodsContent {
  padding: 10rpx 0 10rpx 20rpx;
  display: flex;
  border-bottom: 2rpx solid #eee;
}

.goodsTop>image {
  width: 140rpx;
  height: 140rpx;
}

.goodsBot {
  width: 68%;
  padding-left: 20rpx;
}

.goodsBot>text {
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.goodsBot>text:nth-of-type(1) {
  font-weight: bold;
  padding-bottom: 20rpx;
}

.goodsBot>text:nth-of-type(2) {
  font-weight: bold;
  color: red;
}

.goodsBot>view {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  align-items: center;
}

.goodsBot>view>text:nth-of-type(1) {
  display: inline-block;
  padding: 5rpx;
  border: 2rpx solid red;
  color: red;
  border-radius: 10rpx;
}

.goodsBot>view>text:nth-of-type(2) {
  color: #ccc;
}
