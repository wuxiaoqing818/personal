/* pages/cut/cut.wxss */
.cut {
  display: flex;
  flex-direction: column;
  background: #eee;
  font-size: 26rpx;
}
#wxqSwiper {
  height: 700rpx;
}
#wxqSwiper image {
  width: 100%;
  height: 100%;
}
.produce {
  padding: 20rpx;
  background: white;
  margin-bottom: 20rpx;

}
.produce>text:last-of-type {
  color: red;
  display: block;
  padding-top: 20rpx;
}
.produce>view {
  padding-top: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.produceTop>text:nth-of-type(1) {
  color: red;
  font-size: 34rpx;
  margin-right: 20rpx;

}
.produceTop>text:last-of-type {
  color: #ccc;
  margin-right: 20rpx;

}
.produceBot>image {
  width: 60rpx;
  height: 60rpx;
  margin-left: 10rpx;

}

.cutSet>text {
  padding-left: 20rpx;
}
.content {
  background: white;
  padding-left: 20rpx;
}
.content>view {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 30rpx;
  width: 100%;
  height: 100rpx;
  border-bottom: 2rpx solid #ccc;

}
.content>view>text:last-of-type{
  padding-right: 20rpx;
  color: #ccc;
}