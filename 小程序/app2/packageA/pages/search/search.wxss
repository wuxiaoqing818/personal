/* pages/search/search.wxss */
.search {
  width: 100%;
  display: flex;
  flex-direction: column;
}
.goSearch {
  padding: 20rpx 30rpx 20rpx;
}

.goSearch input {
  position: relative;
  width: 93%;
  height: 70rpx;
  padding: 0 0 0 40rpx;
  border-radius: 40rpx;
  background: white;
  color: #ccc;
  border: 1px solid;
}

.goSearch image {
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  right: 40rpx;
  top: 10rpx;
}
.nav {
  display: flex;
  justify-content: space-around;
}
.nav>text {
  display: block;
  width: 25%;
  height: 80rpx;
  border-top: 2rpx solid #ccc;
  line-height: 80rpx;
  text-align: center;
}
.nav>.textActive {
  color: red;
}
.goods {
  background: #eee;
  padding: 20rpx;
}
.goods>view {
  display: flex;
  background: white;
  border-radius: 20rpx;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.goodsTop {
  width: 30%;
}
.goodsTop>image {
  width: 100%;
  height: 200rpx;
  border-radius: 20rpx;
}
.goodsBot {
  width: 70%;
  padding: 20rpx 30rpx;
}
.goodsBot>text {
  display: block;
  padding-bottom: 10rpx;
  font-size: 28rpx;
}
.goodsBot>text:last-of-type {
  color: red;
  font-size: 34rpx;
}
.goodsBot>view {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.goodsBot>view>text {
  color: #ccc;
  font-size: 24rpx;
}
.goodsBot>view>image {
  width: 50rpx;
  height: 40rpx
}